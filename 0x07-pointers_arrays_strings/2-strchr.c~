#include "main.h"

/**
 *_strchr - returns a pointer to the first occurence of  a character
 *@s: string to be considered
 *@c: sought character
 *Return: pointer to the first occurence or null if absent
 */
char *_strchr(char *s, char c)
{
	int i, k;

	i = 0;
	k = 0;
	while (*(s + i) != '\0')
	{
		if (k == 0 && s[i] == c)
		{
			return (s[i]);
		}
		i++;
	}
  	return (null);

}
